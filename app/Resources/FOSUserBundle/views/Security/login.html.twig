{% trans_default_domain 'FOSUserBundle' %}
{% extends "::base.html.twig" %}


{% block content %}

    <div class="container">
        {% if error %}
            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <form action="{{ path("fos_user_security_check") }}" method="post" class="form_login text-center">
            {% if csrf_token %}
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
            {% endif %}


            <div class="form-group">
                <label for="username" class="label_username germania">{{ 'security.login.username'|trans }}</label> <br>
                <input class="input_login" type="text" id="username" name="_username" value="{{ last_username }}" required="required"/>
            </div>

            <div class="form-group">
                <label for="password" class="germania">{{ 'security.login.password'|trans }}</label> <br>
                <input class="input_login" type="password" id="password" name="_password" required="required"/>
            </div>

            <div class="form-check">
                <input class="checkbox_login" type="checkbox" id="remember_me" name="_remember_me" value="on"/>
                <label for="remember_me" class="germania">{{ 'security.login.remember_me'|trans }}</label>
            </div>

            <br>

            <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}"
                   class="btn_login btn btn-info"/>
        </form>
    </div>
{% endblock %}
