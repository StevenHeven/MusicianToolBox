{% extends "::base-admin.html.twig" %}

{% block content %}

    <p>Voici toutes les salles de concert enregistr√©es dans notre BDD : </p>

    <br>
    <table id="table_admin" class="table table-striped text-center display">
        <thead>
        <tr class="listTd">
            <th>Id</th>
            <th>Nom de la salle</th>
            <th>Type</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for liveroom in liverooms %}
            <tr>
                <td>{{ liveroom.id }}</td>
                <td>{{ liveroom.name }}</td>
                <td>{{ liveroom.type }}</td>
                <td>
                    <div class="btn-group">
                        <button type="button" class="btn btn-sm btn_action dropdown-toggle" data-toggle="dropdown"
                                aria-haspopup="true" aria-expanded="false">
                            Action <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu ">
                            <li><a href="{{ path("editLiveroom", {"id": liveroom.id}) }}"><i
                                            class="glyphicon glyphicon-pencil"></i> &nbsp;Editer</a></li>
                            <li><a href="{{ path("deleteLiveRoom", {"id": liveroom.id}) }}"><i
                                            class="glyphicon glyphicon-remove"></i> &nbsp;Supprimer</a></li>

                        </ul>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}